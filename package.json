{
    "name": "impromptu",
    "displayName": "impromptu",
    "icon": "icon.png",
    "description": "A domain-specific language for prompt engineering.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "impromptu",
                "aliases": [
                    "Impromptu",
                    "impromptu"
                ],
                "extensions": [
                    ".prm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "impromptu",
                "scopeName": "source.impromptu",
                "path": "./syntaxes/impromptu.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "impromptu.generateChatGPT",
                "title": "Generate ChatGPT Python code",
                "shortTitle": "Generate ChatGPT Python code",
                "category": "Impromptu",
                "icon": {
                    "light": "icons/python-logo.png",
                    "dark": "icons/python-logo.png"
                }
            },
            {
                "command": "impromptu.saveCodeDocument",
                "title": "Save Python code",
                "shortTitle": "Save Python code",
                "category": "Impromptu",
                "icon": {
                    "light": "icons/download.png",
                    "dark": "icons/download.png"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == impromptu",
                    "command": "impromptu.generateChatGPT",
                    "group": "navigation"
                },
                {
                    "when": "liveCodePreviewer",
                    "command": "impromptu.saveCodeDocument",
                    "group": "navigation"
                }
            ]
        }
    },
    "activationEvents": [
        "onLanguage:impromptu"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "impromptu-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "chevrotain": "^10.4.1",
        "commander": "^8.0.0",
        "langium": "~1.0.0",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-uri": "^3.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "esbuild": "^0.17.16",
        "eslint": "^8.17.0",
        "langium-cli": "~1.0.0",
        "save": "^2.9.0",
        "typescript": "^4.9.4",
        "webpack": "^5.78.0",
        "webpack-cli": "^5.0.1"
    }
}
