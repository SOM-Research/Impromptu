{
  "name": "impromptu",
  "scopeName": "source.impromptu",
  "fileTypes": [
    ".prm"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.impromptu",
      "match": "\\b(3D\\\\sart|3dobject|accent|advertisement|aerial\\\\sview|alternative|ambient|assets|atmospheric|audience|audio|author|back|bench-level|between|blur|camera-angle|camera-settings|chain|character|close-up|comic\\\\sbook\\\\sart|compare|composer|core|count|dark\\\\sshadows|definition|depth|dialect|different\\\\sfrom|diffuse|digital\\\\sart|distortion|drawing|duration|effects|equivalency|essay|exactly|extreme\\\\sclose-up|extreme\\\\slong\\\\sshot|facetious|fast\\\\sshutter|first\\\\sperson|formal|frame|from|headline|height|high|hour|hyper|image|import|in-house|includes|interview|ironic|joke|language|language-register|length|less\\\\sor\\\\sequal\\\\sthan|less\\\\sthan|letter|lighting|like|line|literary-style|long\\\\sshot|low|low\\\\sangle|max|medium|medium\\\\sshot|min|minute|more\\\\sor\\\\sequal\\\\sthan|more\\\\sthan|neon|neutral|no|over-the-shoulder\\\\sshot|overhead\\\\sview|page|painting|paragraph|photography|pixel|play|poem|point|point-of-view|portrait|prefix|priorVersion|promixity|prompt|proof|refines|reflection|region|report|second|second\\\\sperson|sentence|separator|size|slang|song|source\\\\scode|suffix|taboo|tale|technical|text|third\\\\sperson|tilted\\\\sframe|video|volumetric|vulgar|weight|width|word)\\b|\\b(validator=\\[)\\B|\\B(\\[reinforced\\])\\B"
    },
    {
      "name": "string.quoted.double.impromptu",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.impromptu",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.impromptu",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.impromptu"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.impromptu"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.impromptu"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.impromptu"
        }
      ]
    }
  }
}